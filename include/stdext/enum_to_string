#ifndef STDEXT_ENUM_TO_STRING_H
#define STDEXT_ENUM_TO_STRING_H

// stdext
#include <stdext/stdext>

namespace stdext
{
// Template function to convert an enumeration class to a string
// It have to be specialized for new enumerations classes
template<typename T>
[[nodiscard]] const char* enum_to_string( T );
}  // namespace stdext

#endif
